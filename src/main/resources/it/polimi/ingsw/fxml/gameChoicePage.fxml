      </Button>
      <Button fx:id="newGame_button" layoutX="346.0" layoutY="327.0" mnemonicParsing="false" onMouseClicked="#loadNewGame" text="New Game">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
